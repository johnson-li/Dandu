<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:id="@+id/articleListLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="6dp"
            android:background="@drawable/strike"
            android:textColor="@color/article_title"
            android:id="@+id/title"
            android:text="title"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/articleAbstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/magazine_info"
        android:text="article abstract"/>
    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/separator"
        android:src="@drawable/list_separator_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>