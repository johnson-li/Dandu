<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_frame"
    android:background="@color/transparent">



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/search_one"
        android:background="@drawable/rounded_search_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/search_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/search_bar"
        android:id="@+id/head"
        android:layout_centerHorizontal="true"
        android:src="@drawable/admin_head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="未登录"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/find"
        android:layout_marginLeft="15dp"
        android:text="   发现"
        android:drawableLeft="@drawable/find"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_below="@id/userName"
        android:layout_marginTop="30dp"
        android:background="@drawable/menu_selector"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="   收藏"
        android:textColor="@color/white"
        android:id="@+id/collect"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/collect"
        android:background="@drawable/menu_selector"
        android:layout_below="@id/find"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="   推荐"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/suggest"
        android:gravity="center_vertical"
        android:id="@+id/suggest"
        android:background="@drawable/menu_selector"
        android:layout_below="@id/collect"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="   夜间模式"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/night"
        android:drawableLeft="@drawable/night"
        android:layout_marginLeft="15dp"
        android:background="@drawable/menu_selector"
        android:layout_below="@id/suggest"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/stu"/>

</RelativeLayout>